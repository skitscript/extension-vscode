{
  "name": "skitscript",
  "description": "Adds support for Skitscript documents to Visual Studio Code.",
  "icon": "icon.png",
  "version": "0.0.0",
  "engines": {
    "vscode": "^1.63.0"
  },
  "engineStrict": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/skitscript/extension-vscode"
  },
  "publishConfig": {
    "access": "public"
  },
  "private": false,
  "license": "MIT",
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:skitscript"
  ],
  "main": ".",
  "contributes": {
    "languages": [
      {
        "id": "skitscript",
        "aliases": [
          "Skitscript",
          "skitscript"
        ],
        "extensions": [
          ".skitscript"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "skitscript",
        "scopeName": "text.skitscript",
        "path": "./skitscript.tmLanguage.json"
      }
    ]
  },
  "publisher": "skitscript",
  "devDependencies": {
    "@skitscript/types-nodejs": "0.0.25",
    "@types/jasmine": "3.10.2",
    "@types/node": "16.11.14",
    "@types/rewire": "2.5.28",
    "@types/vscode": "1.63.1",
    "@typescript-eslint/eslint-plugin": "5.7.0",
    "@typescript-eslint/parser": "5.7.0",
    "cpy-cli": "3.1.1",
    "del-cli": "4.0.1",
    "eslint": "8.5.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "jasmine": "3.10.0",
    "npm-run-all": "4.1.5",
    "nyc": "15.1.0",
    "prettier": "2.5.1",
    "rewire": "6.0.0",
    "typescript": "4.5.4",
    "vscode-tmgrammar-test": "0.0.11"
  },
  "scripts": {
    "test": "npm-run-all testCleanCases testCopyCases testSnapshot buildCleanTypeScript buildLintFix buildTypeScript buildNyc",
    "buildCleanTypeScript": "del-cli \"**/*.js\" \"!**/node_modules/**/*\" \"!**/submodules/**/*\"",
    "buildLint": "eslint \"**/*.ts\"",
    "buildLintFix": "eslint --fix \"**/*.ts\"",
    "buildTypeScript": "tsc",
    "buildJasmine": "jasmine --config=jasmine.json",
    "buildNyc": "nyc --check-coverage --all --exclude \"submodules\" --exclude \"**/*.ts\" --exclude \"**/unit.*\" --lines 100 --functions 100 --branches 100 --statements 100 npm run-script buildJasmine",
    "testCleanCases": "del-cli \"document-cases/*/input.skitscript\"",
    "testCopyCases": "cpy --parents --cwd=\"submodules/skitscript/parser-test-suite/document-cases\" \"*/input.skitscript\" \"../../../../document-cases\"",
    "testSnapshot": "vscode-tmgrammar-snap --scope text.skitscript --grammar \"skitscript.tmLanguage.json\" --testcases \"document-cases/*/input.skitscript\""
  },
  "sideEffects": false,
  "dependencies": {
    "@skitscript/parser-nodejs": "0.0.10",
    "optional-require": "1.1.8"
  }
}
